{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build BriAgent.Backend",
			"type": "shell",
			"command": "dotnet build",
			"args": [
				"/Users/edasilvf/Documents/Develop/demo-agent-framework/Bri-Agent/Backend/BriAgent.Backend.csproj",
				"/property:GenerateFullPaths=true",
				"/p:Configuration=Debug",
				"/p:Platform=Any CPU"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": { "kind": "build", "isDefault": true }
		},
		{
			"label": "Run BriAgent.Backend",
			"type": "shell",
			"command": "dotnet run",
			"args": [
				"--project",
				"/Users/edasilvf/Documents/Develop/demo-agent-framework/Bri-Agent/Backend/BriAgent.Backend.csproj"
			],
			"isBackground": false,
			"problemMatcher": ["$msCompile"]
		},
		{
			"label": "Run Frontend Dev",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"options": {
				"cwd": "/Users/edasilvf/Documents/Develop/demo-agent-framework/Bri-Agent/Frontend"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Run All (Backend + Frontend)",
			"dependsOn": ["Run BriAgent.Backend", "Run Frontend Dev"],
			"dependsOrder": "parallel"
		}
	]
}